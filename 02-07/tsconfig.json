{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["esNext"],
    "allowJs": false,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  }
}
